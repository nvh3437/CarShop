@using ShopData.Model
@model CheckoutModel
@{
    ViewData["title"] = "Đặt hàng";
    ViewData["keywords"] = "Đặt hàng";
    ViewData["description"] = "Đặt hàng tại NVHCarShop";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/AssetsProducts/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Đặt hàng</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Home</a>
                        <a href="/Car">Xe</a>
                        <span>Đặt hàng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <form method="post" asp-action="Checkout" asp-controller="Car" asp-area="">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <h4>Thông tin liên hệ</h4>
                        <div class="text-danger mb-4" asp-validation-summary="All"></div>
                        <div class="row">
                            <div class="col-lg">
                                <div class="checkout__input">
                                    <label for="Name">Họ Tên<span class="text-danger">*</span></label>
                                    <input asp-for="Name" type="text">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <label for="Address">Địa chỉ thanh toán<span class="text-danger">*</span></label>
                            <input asp-for="Address" type="text">
                            <span class="text-danger" asp-validation-for="Address"></span>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <label for="Phone">Điện thoại<span class="text-danger">*</span></label>
                                    <input asp-for="Phone" type="number">
                                    <span class="text-danger" asp-validation-for="Phone"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <label for="Email">Email<span class="text-danger">*</span></label>
                                    <input asp-for="Email" type="email">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 checkout__input">
                            <label for="Note">Ghi chú</label>
                            <input asp-for="Note" type="text"
                                   placeholder="Vd. gọi điện vào 9h sáng...">
                            <span class="text-danger" asp-validation-for="Note"></span>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Đơn đặt hàng của bạn</h4>
                            <div class="checkout__order__products">@Model.Car.Name <span></span></div>
                            <input type="text" id="ProductId" value="@Model.Car.Id" name="ProductId" hidden />
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="/@(Model.Car.CoverImage == null?"img/image-slash.jpg":Model.Car.CoverImage)"></div>
                            </div>
                            <div class="checkout__order__total">Tạm tính<span>@String.Format("{0:0,0 VND}", Model.Car.Price-Model.Car.PromoPrice)</span></div>
                            <p>Chi phí có thể thay đổi do thuế, phụ phí trước bạ, vận chuyển... Chúng tôi sẽ thông báo chi tiết với bạn sau khi hoàn thành hồ sơ</p>
                            <button type="submit" class="site-btn">Tiếp tục</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->
@section Styles{
<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>
}
    
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}